<h3>Product List</h3>

<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Creation</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    @foreach (var p in @ViewBag.products)
    {
        <tr>
            <td>@p.Id</td>
            <td>
                <a asp-controller="product" asp-action="details" asp-route-id="@p.Id">@p.Name</a>
            </td>
            <td>@p.Creation.ToString("dd/MM/yyyy")</td>
            <td>
                <a asp-controller="product" asp-action="details" asp-route-id="@p.Id">
                <img src="~/images/@p.Photo" width="100" height="100" />
                </a>    
            </td>
            <td>@p.Price</td>
            <td>@p.Quantity</td>
        </tr>
    }
</table>