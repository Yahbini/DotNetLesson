@inject Lesson1.Services.DemoService demoService;

@demoService.Hello()
<br />
@demoService.Hi("Anh")

<h3>Index</h3>
Result 1: @ViewBag.Result1 
<br />
Result 2: @ViewBag.Result2
<br />
Result add: @ViewBag.Add
<br />
Result mul: @ViewBag.Mul
<br />
Result area: @ViewBag.Area
<br />
Result Perimter: @ViewBag.Perimter

<h3>Product List</h3>

<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Creation</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
    </tr>
    @foreach (var p in @ViewBag.products)
    {
        <tr>
            <td>@p.Id</td>
            <td>
                <a asp-controller="demo4" asp-action="details" asp-route-id="@p.Id">@p.Name</a>
            </td>
            <td>@p.Creation.ToString("dd/MM/yyyy")</td>
            <td>
                <a asp-controller="demo4" asp-action="details" asp-route-id="@p.Id">
                    <img src="~/images/@p.Photo" width="100" height="100" />
                </a>
            </td>
            <td>@p.Price</td>
            <td>@p.Quantity</td>
            <td>
                <a asp-controller="cart" asp-action="buy" asp-route-id="@p.Id">Buy now!!!</a>
            </td>
        </tr>
    }
</table>