<h3>Product List</h3>
<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Creation</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    @foreach (var p in @ViewBag.products)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Creation.ToString("dd/MM/yyyy")</td>
            <td><img src="~/images/@p.Photo" width="100" height="100" /></td>
            <td>@p.Price</td>
            <td>@p.Quantity</td>
        </tr>
    }
</table>