
<a asp-controller="demo4" asp-action="index">Continue shopping</a>
<h3>Cart</h3>
<form method="post" asp-controller="cart" asp-action="update">
    <table border="1">
    <tr>
        <th>Action</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>
            Price
        </th>
        <th>
            Quantity
            <br />
            <button type="submit">Save</button>
        </th>
        <th>Sub Total</th>
    </tr>
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td align="center">
                <a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">X</a>
            </td>
            <td>@item.Product.Id</td>
            <td>
                <a asp-controller="demo4" asp-action="details" asp-route-id="@item.Product.Id">@item.Product.Name</a>
            </td>
            <td>
                <a asp-controller="demo4" asp-action="details" asp-route-id="@item.Product.Id">
                    <img src="~/images/@item.Product.Photo" width="100" height="100" />
                </a>
            </td>
            <td>@item.Product.Price</td>
            <td>
                    <input type="number" min="1" value="@item.Quantity" name="quantities" style="width: 80px" />
                   
            </td>
            <td>
                @(item.Product.Price * item.Quantity)
            </td>
        </tr>
    }
    <tr>
        <td colspan="6" align="right">
            Total
        </td>
        <td>@ViewBag.total</td>
    </tr>
</table>
</form>
<br />
<a asp-controller="cart" asp-action="checkout">Check out</a>
